<div {{ 
    stimulus_controller('main', 
        { 
            'currentUser': currentUser, 
            'uid': uid, 
            'publickey': publickey, 
            'privatekey': privatekey, 
            'passphrase': passphrase 
        }) 
    }} id="chatbox" class="relative grow px-5 gap-0.5 flex flex-col overflow-y-auto">
    <div class="flex flex-grow"></div> 
</div> 

<div class="absolute hidden">
    <ul id="viewerjs-images-container" >  
    </ul>
</div>  

<div id="alert-message-container" class="hidden absolute p-4 mx-10 mt-10 self-center text-yellow-800 border border-yellow-300 rounded-lg bg-yellow-50 dark:bg-gray-800 dark:text-yellow-300 dark:border-yellow-800" role="alert">
    <div class="flex items-center">
        <svg class="flex-shrink-0 w-4 h-4 me-2" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
        <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z" />
        </svg>
        <span class="sr-only">Info</span>
        <h3 class="text-normal font-medium" id="alert-message-title"></h3>
    </div>
    <div class="mt-2 text-sm" id="alert-message-content"></div> 
</div>

<button data-modal-target="static-modal-forward-users-list" data-modal-toggle="static-modal-forward-users-list" id="static-modal-forward-users-list-button" class="hidden" type="button"></button>
<div id="static-modal-forward-users-list" data-modal-backdrop="static" tabindex="-1" aria-hidden="true" class="hidden overflow-y-auto overflow-x-hidden absolute top-0 right-0 left-0 z-50 justify-center items-center w-full md:inset-0 h-[calc(100%-1rem)] max-h-full">
    <div class="relative p-4 w-full max-w-md max-h-full">
        <!-- Modal content -->
        <div class="relative bg-white rounded-lg shadow dark:bg-gray-700">
            <!-- Modal header -->
            <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
                <h3 class="text-xl font-semibold text-gray-900 dark:text-white">
                    Forward
                </h3>
                <button type="button" class="text-gray-400 bg-transparent hover:bg-gray-200 hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white" data-modal-hide="static-modal-forward-users-list">
                    <svg class="w-3 h-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 14 14">
                        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m1 1 6 6m0 0 6 6M7 7l6-6M7 7l-6 6"/>
                    </svg>
                    <span class="sr-only">Close modal</span>
                </button>
            </div>
            <!-- Modal body -->
            <div class="p-5 space-y-2">
                <div class="p-2">
                    <label for="input-group-search" class="sr-only">Search</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 rtl:inset-r-0 start-0 flex items-center ps-3 pointer-events-none">
                            <svg class="w-4 h-4 text-gray-500 dark:text-gray-400" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 20 20">
                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m19 19-4-4m0-7A7 7 0 1 1 1 8a7 7 0 0 1 14 0Z"/>
                            </svg>
                        </div>
                        <input type="search" id="input-group-search" class="block w-full p-2 ps-10 text-sm text-gray-900 border border-gray-300 rounded-lg bg-gray-50 focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500" placeholder="Search user">
                    </div>
                </div>
                <ul class="space-y-3 overflow-auto max-h-80 p-2"> 
                    {% for user in users %} 
                        <li class="{{ user == currentUser ? 'hidden' : '' }} {{ user.isVerified ? '' : 'hidden' }}">
                            <div class="flex justify-between items-center text-sm">
                                <div class="flex items-center self-center flex-shrink-0 gap-2 w-56">
                                    <div class="w-10 h-10 rounded-full bg-contain bg-center shadow border border-gray-200 dark:border-gray-700" style="background-image: url('{{ user.userDetails.avatar }}');"></div>
                                    <p class="outline-none text-sm text-black opacity-80 dark:text-white dark:opacity-90 leading-4 tracking-[.01rem] truncate max-w-60">
                                        {{ user.userDetails.firstname }} {{ user.userDetails.lastname }}
                                    </p>
                                </div>
                                <button id="forward-user-button-{{ user.id }}" userId="{{ user.id }}" type="button" class="px-3 py-2 text-xs font-medium text-center inline-flex items-center text-white bg-indigo-300 rounded-lg focus:outline-none transition-all duration-200 focus:bg-indigo-400 dark:focus:bg-indigo-300 dark:bg-indigo-400 dark:hover:bg-indigo-400 active:scale-110">
                                    <svg id="forward-user-svg-sent-{{ user.id }}" class="w-3 h-3 text-white me-1 hidden" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 16">
                                        <path d="m10.036 8.278 9.258-7.79A1.979 1.979 0 0 0 18 0H2A1.987 1.987 0 0 0 .641.541l9.395 7.737Z"/>
                                        <path d="M11.241 9.817c-.36.275-.801.425-1.255.427-.428 0-.845-.138-1.187-.395L0 2.6V14a2 2 0 0 0 2 2h16a2 2 0 0 0 2-2V2.5l-8.759 7.317Z"/>
                                    </svg>
                                    <svg id="forward-user-svg-default-{{ user.id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" class="w-4 h-4 me-1 text-white">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="M6 12L3.269 3.126A59.768 59.768 0 0121.485 12 59.77 59.77 0 013.27 20.876L5.999 12zm0 0h7.5"></path>
                                    </svg>
                                    <span id="forward-user-span-text-{{ user.id }}">Send</span>
                                </button>
                            </div>
                        </li>   
                    {% endfor %} 
                </ul>
            </div> 
        </div>
    </div>
</div> 
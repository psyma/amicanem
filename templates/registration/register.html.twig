{% extends 'base.html.twig' %}

{% block title %}Register - Amicanem{% endblock %}

{% block body %} 
    {{ form_start(registrationForm, {'attr': {'id': 'registrationForm' }}) }} 
        <section {{ stimulus_controller('registration', { }) }} class="bg-gray-50 dark:bg-gray-900 flex align-center min-h-[100dvh] py-5">
            <div class="flex flex-col items-center justify-center px-6 mx-auto lg:py-0 w-full">
                <a href="#" class="flex items-center py-6 text-2xl font-semibold text-gray-900 dark:text-white">
                    <img class="w-8 h-8 mr-2 object-scale-down" src="/logo.png" alt="logo">
                    Amicanem    
                </a>
                <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
                    <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
                        <h2 class="leading-tight tracking-tight text-gray-900 dark:text-white">
                            Register an account
                        </h2>
                        {% for message in app.flashes('registration-success') %}
                            <div class="flex items-center p-4 mb-4 text-sm text-green-800 border border-green-300 rounded-lg bg-green-50 dark:bg-gray-800 dark:text-green-400 dark:border-green-800" role="alert">
                                <svg class="flex-shrink-0 inline w-4 h-4 me-3" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                                </svg>
                                <span class="sr-only">Info</span>
                                <div>
                                    <span class="font-medium">{{ message }}</span> 
                                </div>
                            </div> 
                        {% endfor %} 
                        {% if (registrationForm.email.vars.errors | length) or (registrationForm.plainPassword.vars.errors | length) %}
                            <div class="flex p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
                                <svg class="flex-shrink-0 inline w-4 h-4 me-3 mt-[2px]" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20">
                                    <path d="M10 .5a9.5 9.5 0 1 0 9.5 9.5A9.51 9.51 0 0 0 10 .5ZM9.5 4a1.5 1.5 0 1 1 0 3 1.5 1.5 0 0 1 0-3ZM12 15H8a1 1 0 0 1 0-2h1v-3H8a1 1 0 0 1 0-2h2a1 1 0 0 1 1 1v4h1a1 1 0 0 1 0 2Z"/>
                                </svg>
                                <span class="sr-only">Danger</span>
                                <div>
                                    <span class="font-medium">Ensure that these requirements are met:</span>
                                    <ul class="mt-1.5 list-disc list-outside">
                                        {% for error in registrationForm.email.vars.errors %}
                                            <li>{{ error.message}}</li>
                                        {% endfor %}  
                                        {% for error in registrationForm.plainPassword.vars.errors %}
                                            <li>{{ error.message}}</li>
                                        {% endfor %}  
                                        <li>{{ form_errors(registrationForm.agreeTerms) }}</li>
                                    </ul>
                                </div>
                            </div>
                        {% endif %}
                        <form class="space-y-4 md:space-y-6" action="#"> 
                            <div>
                                {{ form_label(registrationForm.firstname, 'First name', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                                {{ form_widget(registrationForm.firstname, {'attr': {'minlength': '3', 'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                            </div>
                            <div>
                                {{ form_label(registrationForm.lastname, 'Last name', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                                {{ form_widget(registrationForm.lastname, {'attr': {'minlength': '3', 'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                            </div>
                            <div>
                                {{ form_label(registrationForm.email, 'Your email', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                                {{ form_widget(registrationForm.email,  {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                            </div>
                            <div> 
                                {{ form_label(registrationForm.plainPassword, 'Password', {'label_attr': {'class': 'block mb-2 text-sm font-medium text-gray-900 dark:text-white'}}) }}
                                <div class="relative"> 
                                    {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'bg-gray-50 border border-gray-300 text-gray-900 sm:text-sm rounded-lg focus:ring-primary-600 focus:border-primary-600 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500'}}) }}
                                    <div class="absolute inset-y-0 right-0 pr-3 flex items-center text-sm"> 
                                        <button {{ stimulus_action('registration', 'showPassword', 'click', {'eyeSvg': 'eyeSvg', 'eyeSvgDefault': 'eyeSvgDefault', 'isShow': false, 'inputPasswordId': 'registration_form_plainPassword' }) }} type="button">
                                            <svg id="eyeSvgDefault" class="h-6 text-gray-700 cursor-pointer hidden" fill="none" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 576 512">
                                                <path fill="currentColor"
                                                    d="M572.52 241.4C518.29 135.59 410.93 64 288 64S57.68 135.64 3.48 241.41a32.35 32.35 0 0 0 0 29.19C57.71 376.41 165.07 448 288 448s230.32-71.64 284.52-177.41a32.35 32.35 0 0 0 0-29.19zM288 400a144 144 0 1 1 144-144 143.93 143.93 0 0 1-144 144zm0-240a95.31 95.31 0 0 0-25.31 3.79 47.85 47.85 0 0 1-66.9 66.9A95.78 95.78 0 1 0 288 160z">
                                                </path>
                                            </svg>
                                        </button>

                                        <button {{ stimulus_action('registration', 'showPassword', 'click', {'eyeSvg': 'eyeSvg', 'eyeSvgDefault': 'eyeSvgDefault', 'isShow': true, 'inputPasswordId': 'registration_form_plainPassword' }) }} type="button">
                                            <svg id="eyeSvg" class="h-6 text-gray-700 cursor-pointer" fill="none" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 640 512">
                                                <path fill="currentColor"
                                                    d="M320 400c-75.85 0-137.25-58.71-142.9-133.11L72.2 185.82c-13.79 17.3-26.48 35.59-36.72 55.59a32.35 32.35 0 0 0 0 29.19C89.71 376.41 197.07 448 320 448c26.91 0 52.87-4 77.89-10.46L346 397.39a144.13 144.13 0 0 1-26 2.61zm313.82 58.1l-110.55-85.44a331.25 331.25 0 0 0 81.25-102.07 32.35 32.35 0 0 0 0-29.19C550.29 135.59 442.93 64 320 64a308.15 308.15 0 0 0-147.32 37.7L45.46 3.37A16 16 0 0 0 23 6.18L3.37 31.45A16 16 0 0 0 6.18 53.9l588.36 454.73a16 16 0 0 0 22.46-2.81l19.64-25.27a16 16 0 0 0-2.82-22.45zm-183.72-142l-39.3-30.38A94.75 94.75 0 0 0 416 256a94.76 94.76 0 0 0-121.31-92.21A47.65 47.65 0 0 1 304 192a46.64 46.64 0 0 1-1.54 10l-73.61-56.89A142.31 142.31 0 0 1 320 112a143.92 143.92 0 0 1 144 144c0 21.63-5.29 41.79-13.9 60.11z">
                                                </path>
                                            </svg> 
                                        </button>
                                    </div>
                                </div>
                            </div> 
                            <div class="flex">
                                <div class="flex items-center">
                                    {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'w-4 h-4 border border-gray-300 rounded bg-gray-50 focus:ring-3 focus:ring-primary-300'}}) }}
                                    {{ form_label(registrationForm.agreeTerms, 'I accept the', {'label_attr': {'class': 'ml-2 block text-sm text-gray-900'}}) }}
                                </div>
                                <a href="/terms-and-conditions" class="text-sm text-blue-600 ml-1">Terms and Conditions</a>
                            </div> 
                            {{ form_row(registrationForm._token) }} 
                            <button type="submit" class="w-full justify-center bg-blue-600 px-4 py-2 border flex gap-2 border-slate-200 dark:border-slate-700 rounded-lg text-slate-700 dark:text-slate-200 hover:border-slate-400 dark:hover:border-slate-500 hover:text-slate-900 dark:hover:text-slate-300 hover:shadow transition duration-150">
                                <span class="text-white">Sign Up</span>
                            </button> 
                            <p class="text-sm font-light text-gray-500 dark:text-gray-400">
                                Already have an account? <a href="/login" class="font-medium text-blue-600 hover:underline">Sign In</a>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </section>
    {{ form_end(registrationForm) }} 
{% endblock %}


